DT_COMPAT_VBUS_VOLTAGE_DIVIDER_ADC := vbus-voltage-divider-adc

config VBUS_VOLTAGE_DIVIDER_ADC
	bool "VBUS Voltage Divider ADC"
	default $(dt_compat_enabled,$(DT_COMPAT_VBUS_VOLTAGE_DIVIDER_ADC))
	help
	  Measure VBUS with an ADC through a voltage divider
